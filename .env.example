# Database (Railway Postgres)
DATABASE_URL=postgresql://user:password@host:port/database

# Clerk Authentication
VITE_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx

# Storage - Railway Buckets (production)
# These are auto-injected when you link a Railway Bucket to your service
# BUCKET_ENDPOINT=https://storage.railway.app
# BUCKET_ACCESS_KEY_ID=xxx
# BUCKET_SECRET_ACCESS_KEY=xxx
# BUCKET_NAME=videos-abc123
# BUCKET_REGION=us-west-2

# Storage - MinIO (local development)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=videos

# Application
NODE_ENV=development
LOG_LEVEL=debug
PORT=3000
